FROM google/dart:2.6

WORKDIR /usr/src
RUN apt-get update && \
apt-get install -y \
gcc \
g++ \
make \
&& \
apt-get clean && \
apt-get autoremove && \
git clone https://github.com/edenhill/librdkafka.git && \
cd librdkafka && \
git checkout v1.2.2 && \
./configure --install-deps && \
make && \
make install
